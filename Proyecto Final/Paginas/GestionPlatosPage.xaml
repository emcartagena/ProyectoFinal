<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto_Final.Paginas.GestionPlatosPage"
             Title="Crear un Plato">
    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Label Text="ELIGE TU ACCIÃ“N"/>
        <Entry Placeholder="Introduzca el Nombre del Plato" Text="{Binding Path=plato.Nombre}"/>
        <Entry Placeholder="Introduzca los ingredientes del Plato" Text="{Binding Path=plato.Ingredientes}"/>
        <Entry Placeholder="Introduzca el Precio del Plato" Text="{Binding Path=plato.Precio,StringFormat='Precio: Bs. {0:F2} '}"/>
        <Button Text="Eliminar" Clicked="OnEliminarClic"/>
        <Button Text="Cancelar" Clicked="OnCancelClic"/>
        <Button Text="Grabar" Clicked="OnGuardarClic"/>
    </VerticalStackLayout>
</ContentPage>